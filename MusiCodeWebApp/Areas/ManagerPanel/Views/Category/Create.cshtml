@model MusiCodeWebApp.Models.Category
@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}
@section styles{
    <link href="~/Areas/ManagerPanel/Assets/Css/FormStyle.css" rel="stylesheet" />
}
<div class="pagetitle">
    <h2>Kategori Ekle</h2>
</div>
<div class="formContainer">
    @using (Html.BeginForm())
    {
        if (ViewBag.mesaj != null)
        {
            <label class="validationMessage">@ViewBag.mesaj</label>
        }
        <div class="row">
            <label>Isim</label>
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "textBox" } })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "validationMessage" })
        </div>
        <div class="row">
            <label>Açıklama</label>
            @Html.EditorFor(x => x.Description, new { htmlAttributes = new { @class = "textBox" } })
            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "validationMessage" })
        </div>
        <div class="row">
            @Html.EditorFor(x => x.IsActive, new { htmlAttributes = new { @id = "isActive" } })
            <label for="isActive"> Aktif Kategori</label>
        </div>
        <div class="row">
            <button type="submit" class="formButton">Kategori Ekle</button>
        </div>
    }
</div>
<div class="clearfix"></div>